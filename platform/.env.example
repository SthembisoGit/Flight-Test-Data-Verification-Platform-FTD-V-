# Shared
NODE_ENV=development
API_PORT=4000
REDIS_URL=redis://redis:6379
QUEUE_NAME=analysis-jobs
QUEUE_CONCURRENCY=2
QUEUE_RETRY_ATTEMPTS=2
QUEUE_BACKOFF_MS=2000
ENGINE_TIMEOUT_MS=900000
ARTIFACTS_ROOT=/app/platform/data/artifacts
MAX_UPLOAD_MB=50
ENABLE_PDF=false
CORS_ORIGIN=http://localhost:3000
SWAGGER_ENABLED=true

# API / Worker DB
DATABASE_URL=mysql://astvdp:astvdp@mysql:3306/astvdp

# Engine execution
ENGINE_BINARY_PATH=/usr/local/bin/astvdp
ENGINE_WORKDIR=/app/engine
# Host-process override example (Windows):
# ENGINE_BINARY_PATH=C:\Users\USER\Desktop\DENEL\ast-vdp\build\windows-msvc-local\Release\astvdp.exe
# ENGINE_WORKDIR=C:\Users\USER\Desktop\DENEL\ast-vdp

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000/api/v1
API_BASE_URL_SERVER=http://api:4000/api/v1
NEXT_PUBLIC_POLL_INTERVAL_MS=3000
NEXT_PUBLIC_APP_TITLE=AST-VDP Ops Console

# Docker ports
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=astvdp
MYSQL_USER=astvdp
MYSQL_PASSWORD=astvdp
MYSQL_PORT=3306
REDIS_PORT=6379
WEB_PORT=3000
